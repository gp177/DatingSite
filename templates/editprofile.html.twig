{% extends "master.html.twig" %}




{% block title %}{% endblock %}


{% block content %}
    {% if errorList %}
        <ul>
            {% for error in errorList %}
                <li>{{error}}</li>
                {% endfor %}
        </ul>
    {% endif %}

    <form method="post" enctype="multipart/form-data" >    



        <p><span>Name(Not username):</span><span>{{pl.name}}</span></p>
        <input type="text" name ="name" ></ br>
        Profile picture:<input type="file" name="profileImage"><br>

        <select name="gender" value="{{pl.gender}}">
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select><br>

        <p><span>Country:</span><span>{{pl.country}}</span></p>

        <p><span>City:</span><span>{{pl.city}}</span></p>
        
        Language: <input type="text" name ="language" value="{{pl.language}}" >

        Additional Info:<textarea name="aditionalInfo" rows="4" cols="50"></textarea>


            <input type="submit" value="Save changes">

            </form>

        {% endblock %}{# empty Twig template #}