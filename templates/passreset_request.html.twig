{% extends "master.html.twig" %}


{% block title %}Forgotten Password{% endblock %}

{% block content %}

   
    
    {% if error %}
        
        <p>We weren't able to find the email ou provided in our records,
            try again or <a href='/register'>Register</a> a new account.</p>  
        {% endif %}
            

    
    <html>
    <body>
    <div class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-3"> </div>
        <div class="col-md-6">
          <div class="card text-white p-5 bg-primary" style="" >
            <div class="card-body">
              <p>Enter your email below and we'll send you password reset link</p>
              <form method="post">
                <div class="form-group"> <label>Username</label>
                  <input type="email"  name="email" class="form-control" placeholder="Enter Email"> </div>
                <button type="submit" class="btn btn-secondary">Request</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

{% endblock %}
