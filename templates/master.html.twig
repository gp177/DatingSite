<body>
    <nav class="navbar navbar-expand-md bg-danger navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><i class="fa d-inline fa-lg fa-heart"></i><b> Dating Website</b></a>

            {% if userSession %}
                
                <div class="collapse navbar-collapse text-center justify-content-end" id="navbar2SupportedContent">
                    <div class='container'>
                    <button type="button" class="btn btn-light">My profile</button>
                    <button type="button" class="btn btn-light">Search</button>
                    <button type="button" class="btn btn-light">My Chats</button>
                    <button type="button" class="btn btn-light">Help</button>
                    </div>
                    <ul class="navbar-nav">
                        <li class="">
                            <span class="navbar-text navbar-right" href=""><a href='/profile'><img style="border-radius: 20px 20px 20px" src="{{ userSession.profilePicPath }}" width="20" height="20"> {{ userSession.name }}</a> &nbsp;</span>
                        </li>
                    </ul>
                    <a class="btn btn-secondary " href='/logout'>Logout</a>
                    <ul class="navbar-nav"></ul>
                </div>  


            {% else %}

                <div class="collapse navbar-collapse text-center justify-content-end" id="navbar2SupportedContent">
                    <ul class="navbar-nav">
                        <li class="">
                            <span class="navbar-text navbar-right" href="">You're not logged in. You may  &nbsp;</span>
                        </li>
                        <li>
                            <a class="navbar-text navbar-link " href='/login'>Login</a>  
                        </li>
                        <li>
                            <span class="navbar-text">&nbsp;or&nbsp;</span>  
                        </li>
                        <li>
                            <a class="navbar-text navbar-link" href='/register'>Register</a>  
                        </li>
                    </ul>

                </div>    

            {% endif %}

        </div>
    </nav>
