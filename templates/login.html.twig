                  <input type="password" name="pass" class="form-control" placeholder="Password"> </div>
                  <button type="submit" class="btn btn-secondary">Login</button>  <div class="fb-login-button" data-max-rows="1" data-size="large" data-button-type="continue_with" data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="false"></div>        
              </form>
