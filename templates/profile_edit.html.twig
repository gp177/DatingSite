{% extends "master.html.twig" %}




{% block title %}{% endblock %}


{% block content %}
    {% if errorList %}
        <ul>
            {% for error in errorList %}
                <li>{{error}}</li>
                {% endfor %}
        </ul>
    {% endif %}


    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <form class="" method="post" enctype="multipart/form-data">

                        <div class="form-group"> <label>Name:</label><br>
                            <input type="text" name ="name" value="{{pl.name}}"> </div>
                        <div class="form-group"> <label>Picture profile:</label><br>
                            <input type="file" name="profileImage"> </div>
                        <div class="form-group"> <label>Gender:</label><br>
                            <select name="gender" value="{{pl.gender}}">
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select> </div>

                        <div class="form-group"> <label>Country:</label><br>
                            <input type="text" name="country" value="{{pl.country}}"></div>
                        <div class="form-group"> <label>City:</label><br>
                            <input type="text" name="city" value="{{pl.city}}"> </div>
                        <div class="form-group"> <label>Postal Code:</label><br>
                            <input type="text" name="postalCode" value="{{pl.postalCode}}"> </div>
                        <div class="form-group"> <label>Language:</label><br>
                            <input type="text" name ="language" value="{{pl.language}}" > </div>
                        <div class="form-group"> <label>About myself:</label><br>
                            <textarea name="additionalInfo" rows="4" cols="50">{{pl.additionalInfo}}</textarea></div>
                        <div class="form-group"> <label>Height(cm):</label><br>
                            <input type="number" name ="height" value="{{pl.height}}" > </div>
                        <div class="form-group"> <label>Weight(kg):</label><br>
                            <input type="number" name ="weight" value="{{pl.weight}}" > </div>    
                        <div class="form-group"> <label>Hairt colour:</label><br>
                            <input type="text" name="hairColour" value="{{pl.hairColour}}"></div>
                        <div class="form-group"> <label>Body type:</label><br>
                            <input type="text" name="bodyType" value="{{pl.bodyType}}"></div>
                        <div class="form-group"> <label>Skyn color:</label><br>
                            <input type="text" name="skinColour" value="{{pl.skinColour}}"></div>
                        <div class="form-group"> <label>Occupation:</label><br>
                            <input type="text" name="occupation" value="{{pl.occupation}}"></div>
                        <div class="form-group"> <label>Sexual Orientation:</label><br>
                            <select name="sexualOrientation" value="{{pl.sexualOrientation}}">
                                <option value="Heterosexual">Heterosexual</option>
                                <option value="Bisexual">Bisexual</option>
                                <option value="Homosexual">Homosexual</option>
                            </select> </div>

                        <button type="submit" class="btn btn-primary">Save Changes</button>

                    </form>
                </div>
            </div>
        </div>
    </div>

</form>

{% endblock %}{# empty Twig template #}