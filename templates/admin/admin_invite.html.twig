{% block title %}Admin Invite{% endblock %}

{% block content %}

   
    
    {% if error %}
        
        <p>No Email Found</p>  
        {% endif %}
            

    
    <html>
    <body>
    <div class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-3"> </div>
