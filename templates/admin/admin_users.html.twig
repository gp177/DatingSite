{% extends "master.html.twig" %}

{% block title %}Posts{% endblock %}

{% block content %}
   
    <h2>Total Users: {{userCount}}</h2>
    
    
    <table border="1">
        <tr>
            <th>#</th>
            <th>Photo</th>
            <th>username</th>
            <th>email</th>
            <th>name</th>
            <th>gender</th>
            <th>Birth Date</th>
            <th>Postal Code</th>
             <th>City</th>
             <th>Country</th>
             <th>Registration Date</th>
             <th>Actions</th>
        </tr>
    
    {% for p in list %}
        <tr>
      <td>{{p.id}}</td>
      <td><img src=""></td>
            <td>{{p.username}}</td>
            <td>{{p.email}}</td>
            <td>{{p.name}}</td>
             <td>{{p.gender}}</td>
              <td>{{p.birthDate}}</td>
               <td>{{p.postalCode}}</td>
                <td>{{p.city}}</td>
                 <td>{{p.country}}</td>
                  <td>{{p.registrationDate}}</td>
                  <td>
                 <a href="/admin/panel/warn/{{p.id}}">Warn</a> |
                <a href="/admin/panel/ban/{{p.id}}">Ban</a> |
                <a href="/admin/panel/delete/{{p.id}}">Remove</a>
                  </td>
                    
        </tr>
        
      
            {% else %}
            <tr><td colspan="6">There are no users</td></tr>
                
                {% endfor %}
    
    
    <br><br>
                <form method="get">            
        <input type="text" name="search" value="{{v.name}}">
        <input type="submit" value="Search"><br><br>
                     </form>
        
 
    
    
{% endblock %}
