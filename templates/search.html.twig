              <form method="post">
               I'm looking for: <select name="gender">
                   <option value="male">Man</option>
                    <option value ="female">Woman</option>
                </select><br>
                
                  Age: from <input type="number" name="ageFrom" placeholder="From"/> to <input type="number" name="ageTo" placeholder="To"/><br>
                <input type="checkbox" name="withPhoto" value="photo" >With Photo<br>
                <input type="submit" class="btn btn-secondary" value="Search">
                      
              </form>
              <style> 
                  #click {
                      color:white;
                  }
              </style>
            </div>
          </div>
        </div>
      </div>
    

